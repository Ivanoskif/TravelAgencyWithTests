@model List<TravelAgency.Web.Models.CartItem>
@using System.Globalization
@{
    ViewData["Title"] = "Your Cart";
    var ok = TempData["Ok"] as string;
    var err = TempData["Err"] as string;
    var total = (decimal)(ViewBag.Total ?? 0m);
    var usd = new CultureInfo("en-US");
}

<style>
    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .card-elevated {
        border: 0;
        box-shadow: 0 10px 20px rgba(0,0,0,.06);
    }
</style>

<div class="container py-4">
    <div class="page-header mb-3">
        <div>
            <h1 class="h3 fw-semibold mb-1">Your cart</h1>
            <p class="text-secondary mb-0">Review your selections before checkout.</p>
        </div>
        <div>
            <a asp-controller="Packages" asp-action="Index" class="btn btn-outline-secondary">← Continue shopping</a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (!string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="card card-elevated">
            <div class="card-body p-5 text-center text-secondary">
                <div style="font-size:2rem;">🧳</div>
                <div class="mt-2">Your cart is empty.</div>
                <div class="mt-3">
                    <a asp-controller="Packages" asp-action="Index" class="btn btn-primary">Browse packages</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card card-elevated">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Package</th>
                                        <th class="text-center">People</th>
                                        <th class="text-end">Unit Price (USD)</th>
                                        <th class="text-end">Subtotal</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@i.Title</td>
                                            <td class="text-center">@i.PeopleCount</td>
                                            <td class="text-end">@i.UnitPrice.ToString("C", usd)</td>
                                            <td class="text-end fw-semibold">@i.Subtotal.ToString("C", usd)</td>
                                            <td class="text-end">
                                                <form asp-action="Remove" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="packageId" value="@i.PackageId" />
                                                    <button class="btn btn-sm btn-outline-danger">Remove</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-end">Total:</th>
                                        <th class="text-end">@total.ToString("C", usd)</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card card-elevated">
                    <div class="card-body p-4">
                        <h2 class="h6 text-uppercase text-secondary mb-3">Summary</h2>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items</span>
                            <span>@Model.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total</span>
                            <span class="fw-semibold">@total.ToString("C", usd)</span>
                        </div>
                        <form asp-action="Checkout" method="post" class="d-grid gap-2">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-primary" type="submit">Checkout</button>
                            <a asp-controller="Packages" asp-action="Index" class="btn btn-light">Continue shopping</a>
                        </form>
                        <div class="small text-secondary mt-3">Prices shown in USD. Final price may vary depending on payment provider.</div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>